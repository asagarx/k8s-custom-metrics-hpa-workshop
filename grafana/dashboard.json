{
  "dashboard": {
    "id": null,
    "title": "Python Web App Metrics",
    "tags": ["python", "hpa", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Requests per Second",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Total Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "http_requests_total",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Pod Count",
        "type": "stat",
        "targets": [
          {
            "expr": "count(up{job=\"python-web-app-service\"})",
            "legendFormat": "Active Pods"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "HPA Target vs Current",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "Current RPS"
          }
        ],
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 8},
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}